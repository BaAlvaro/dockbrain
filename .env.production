# Production Environment Template
# Copy to .env and configure for production

# === REQUIRED ===

TELEGRAM_BOT_TOKEN=
ADMIN_API_TOKEN=

# === LLM CONFIGURATION ===

# Ollama (recommended for VPS)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# OR OpenAI
# LLM_PROVIDER=openai
# OPENAI_API_KEY=

# === PATHS ===

DATABASE_PATH=./data/dockbrain.db
LOGS_DIR=./data/logs
SAFE_ROOT_DIR=./data/safe_root

# === API ===

API_HOST=0.0.0.0
API_PORT=3000

# === SECURITY ===

MAX_RETRY_ATTEMPTS=3
TASK_TIMEOUT_MS=120000
PAIRING_TOKEN_TTL_MINUTES=60
RATE_LIMIT_PER_MINUTE=10

# === LLM SETTINGS ===

LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# === ENVIRONMENT ===

NODE_ENV=production
LOG_LEVEL=info
