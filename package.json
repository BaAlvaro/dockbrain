{
  "name": "dockbrain",
  "version": "0.1.0",
  "description": "Local-first task automation assistant with security by default",
  "type": "module",
  "main": "dist/src/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/src/main.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "tsx src/persistence/migrations/migration-runner.ts"
  },
  "keywords": [
    "automation",
    "assistant",
    "telegram",
    "security",
    "llm",
    "ollama",
    "ai",
    "local-first",
    "privacy",
    "task-automation"
  ],
  "author": "DockBrain Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BaAlvaro/dockbrain.git"
  },
  "bugs": {
    "url": "https://github.com/BaAlvaro/dockbrain/issues"
  },
  "homepage": "https://github.com/BaAlvaro/dockbrain#readme",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "better-sqlite3": "^9.4.0",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "grammy": "^1.19.2",
    "nanoid": "^5.0.5",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
