# DockBrain Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token
# Get it from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin API Token for local HTTP API
# Generate a secure random token (e.g., using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ADMIN_API_TOKEN=your_admin_api_token_here

# LLM Provider Configuration
# Options: openai, ollama, mock, gemini
LLM_PROVIDER=openai

# OpenAI Configuration (if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (if using gemini provider)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Codex CLI/IDE (optional)
# If using ChatGPT login or API key via Codex CLI, ensure the CLI is installed.
CODEX_CLI_PATH=codex
CODEX_HOME=

# Ollama Configuration (if using ollama provider)
# Make sure Ollama is running: ollama serve
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Database path
DATABASE_PATH=./data/dockbrain.db

# Logs directory
LOGS_DIR=./data/logs

# Safe root directory for file operations
# Files outside this directory cannot be accessed
SAFE_ROOT_DIR=./data/safe_root

# API Server
API_HOST=127.0.0.1
API_PORT=3000

# Security
MAX_RETRY_ATTEMPTS=3
TASK_TIMEOUT_MS=120000
PAIRING_TOKEN_TTL_MINUTES=60

# Rate limiting
RATE_LIMIT_PER_MINUTE=10

# LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# Environment
NODE_ENV=development

# Hooks (webhooks)
HOOKS_TOKEN=

# Email (SMTP) - optional, required if tools.email.enabled=true
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Gmail OAuth (for Gmail API tool)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:3000/oauth2callback
GMAIL_REFRESH_TOKEN=
GMAIL_FROM=
